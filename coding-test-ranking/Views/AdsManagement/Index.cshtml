@model IEnumerable<PublicAd>
@{
    ViewData["Title"] = "List Ads";
}
@foreach (var item in ViewContext.ViewData.ModelState) {
<div class="alert alert-warning" role="alert">
    @item.Value
</div>
}
<p>
    <a asp-controller="AdsManagement" asp-action="Create">add</a>
</p>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Typology</th>
            <th>Description</th>
            <th>Pictures</th>
            <th>House size</th>
            <th>Garden size</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Typology</td>
                <td>@r.Description</td>
                <td>
                    <ul class="list-group list-group-flush">
                        @foreach (var o in r.PictureUrls)
                        {
                            <li class="list-group-item">@o</li>
                        }
                    </ul>
                </td>
                <td>@r.HouseSize </td>
                <td>@r.GardenSize</td>
                <td>
                    <a asp-controller="AdsManagement" asp-action="Delete" asp-route-id="@r.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>